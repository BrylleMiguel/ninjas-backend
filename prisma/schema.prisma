generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ninja {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  weapons   Weapon[]

  name     String
  nickname String?

  @@map("ninjas")
}

// ______________WEAPONS_______________

model Weapon {
  id String @id @default(uuid())

  name        String
  damage      Float?  @default(0.00)
  damageType  String? @default("Single")
  attackSpeed String? @default("Slow") // slow, avg, instant
  WeaponType  String? @default("Light") // light, heavy

  Ninja   Ninja?  @relation(fields: [ninjaId], references: [id])
  ninjaId String?

  @@map("weapons")
}

// a model to collect weapon list

model WeaponList {
  id String @id

  name        String
  damage      Float?  @default(0.00)
  damageType  String?
  attackSpeed String?
  weaponType  String?
}
