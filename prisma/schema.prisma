// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ninja {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name            String
  nickname        String?
  primaryWeapon   PrimaryWeapon?
  SecondaryWeapon SecondaryWeapon?
  Pet             Pet?

  @@map("Ninjas")
}

model PrimaryWeapon {
  id          String  @id @default(uuid())
  name        String
  damage      Float?  @default(0.00)
  damageType  String? @default("Single")
  attackSpeed String? @default("Slow") // slow, avg, instant
  weaponType  String? @default("Light") // light, heavy
  ninja       Ninja   @relation(fields: [ninjaId], references: [id], onDelete: Cascade)
  ninjaId     String  @unique

  @@map("Primary_Weapons")
}

// kunai, shuriken, kusarigama
model SecondaryWeapon {
  id     String @id @default(uuid())
  name   String
  damage Float
  count  Int?

  ninja   Ninja  @relation(fields: [ninjaId], references: [id], onDelete: Cascade)
  ninjaId String @unique

  @@map("Secondary_Weapons")
}

// smoke bomb, sleeping bomb, poison bomb
model Accessory {
  id     String @id @default(uuid())
  name   String
  type   String
  radius Float
  count  Int?

  @@map("Accessories")
}

// ______LIST_______

model PrimaryWeaponList {
  id String @id

  name        String
  damage      Float?  @default(0.00)
  damageType  String?
  attackSpeed String?
  weaponType  String?
}

model SecondaryWeaponList {
  id String @id

  name   String
  damage Float? @default(0.00)
}

model CharacterList {
  id                   String  @id @default(uuid())
  name                 String
  description          String?
  element              String
  resistancePercentage Float
  bonusDamage          Float
  bonusElementDamage   Float
}

model AccessoryList {
  id     String @id @default(uuid())
  name   String
  type   String
  radius Float
}

// ________PET_______

model Pet {
  id               String  @id @default(uuid())
  pet              String // dog, cat, crow, horse, carabao, rat
  name             String
  nickname         String?
  skill            String
  skillDescription String?

  ninja   Ninja  @relation(fields: [ninjaId], references: [id], onDelete: Cascade)
  ninjaId String @unique

  @@map("Pets")
}

model PetList {
  id               String  @id @default(uuid())
  pet              String
  name             String
  nickname         String?
  skill            String
  skillDescription String?
}
