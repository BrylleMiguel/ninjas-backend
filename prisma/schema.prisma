generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ninja {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name            String
  nickname        String?
  primaryWeaponId PrimaryWeapon?

  @@map("ninjas")
}

// ______________WEAPONS_______________

model PrimaryWeapon {
  id          String  @id @default(uuid())
  name        String
  damage      Float?  @default(0.00)
  damageType  String? @default("Single")
  attackSpeed String? @default("Slow") // slow, avg, instant
  weaponType  String? @default("Light") // light, heavy
  ninja       Ninja   @relation(fields: [ninjaId], references: [id])
  ninjaId     String  @unique

  @@map("weapons")
}

// a model to collect weapon list

model WeaponList {
  id String @id

  name        String
  damage      Float?  @default(0.00)
  damageType  String?
  attackSpeed String?
  weaponType  String?
}
