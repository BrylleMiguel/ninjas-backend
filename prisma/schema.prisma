// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ninja {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String
  nickname      String?
  primaryWeapon PrimaryWeapon?
  Pet           Pet?

  @@map("Ninjas")
}

// ______________WEAPONS_______________

model PrimaryWeapon {
  id          String  @id @default(uuid())
  name        String
  damage      Float?  @default(0.00)
  damageType  String? @default("Single")
  attackSpeed String? @default("Slow") // slow, avg, instant
  weaponType  String? @default("Light") // light, heavy
  ninja       Ninja   @relation(fields: [ninjaId], references: [id], onDelete: Cascade)
  ninjaId     String  @unique

  @@map("Primary_Weapons")
}

// a model to collect weapon list

model WeaponList {
  id String @id

  name        String
  damage      Float?  @default(0.00)
  damageType  String?
  attackSpeed String?
  weaponType  String?
}

// characters

model CharacterList {
  id                   String  @id @default(uuid())
  name                 String
  description          String?
  element              String
  resistancePercentage Float
  bonusDamage          Float
  bonusElementDamage   Float
}

// pets / companion

model Pet {
  id               String @id @default(uuid())
  pet              String // dog, cat, crow, horse, carabao, rat
  name             String
  nickname         String
  skill            String
  skillDescription String

  ninja   Ninja  @relation(fields: [ninjaId], references: [id], onDelete: Cascade)
  ninjaId String @unique

  @@map("pets")
}
